<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/touch_tools_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/translate_alpha"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="60dp"
    android:visibility="gone">

    <LinearLayout
        android:id="@+id/progressTool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/currentPosition"
                style="@style/text_17_color_main_blue_style"
                android:text="" />

            <TextView
                style="@style/text_20_color_white_style"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:text="/" />

            <TextView
                android:id="@+id/duration"
                style="@style/text_17_color_white_style"
                android:text="" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:progressBarStyleHorizontal"
            android:layout_width="180dp"
            android:layout_height="3dp"
            android:layout_marginTop="8dp"
            android:max="100"
            android:progressDrawable="@drawable/progressbar" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/alphaTool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:minWidth="100dp"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_alpha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_brightness_high_white_24dp" />

        <TextView
            android:id="@+id/alpha"
            style="@style/text_17_color_white_style"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/volumeTool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:minWidth="100dp"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_volume_up_white_24dp" />

        <TextView
            android:id="@+id/volume"
            style="@style/text_17_color_white_style"
            android:text="" />

    </LinearLayout>

</FrameLayout>