<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_app_bar_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View style="@style/divider_line" />

    <LinearLayout
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_app_bar_height"
        android:background="@color/white">

        <RadioButton
            android:id="@+id/tab_1"
            style="@style/bottom_radio"
            android:drawableTop="@drawable/tab_1_selector"
            android:text="@string/string_tab_home" />

        <RadioButton
            android:id="@+id/tab_2"
            style="@style/bottom_radio"
            android:drawableTop="@drawable/tab_2_selector"
            android:text="@string/string_tab_gallary" />

        <RadioButton
            android:id="@+id/tab_3"
            style="@style/bottom_radio"
            android:drawableTop="@drawable/tab_3_selector"
            android:text="@string/string_tab_chart" />

        <RadioButton
            android:id="@+id/tab_4"
            style="@style/bottom_radio"
            android:drawableTop="@drawable/tab_4_selector"
            android:text="@string/string_tab_news" />

    </LinearLayout>

</LinearLayout>