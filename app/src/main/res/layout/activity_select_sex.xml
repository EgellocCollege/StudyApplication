<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/woman"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/tv_woman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/woman"
            android:textColor="@color/text_color_2"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/img_woman"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_above="@id/tv_woman"
            android:background="@drawable/blue_stroke_circle_unselect"
            android:padding="4dp"
            android:src="@mipmap/women" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/man"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="20dp">

        <ImageView
            android:id="@+id/img_man"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"

            android:layout_alignParentTop="true"
            android:background="@drawable/blue_stroke_circle_unselect"
            android:padding="4dp"
            android:src="@mipmap/men" />

        <TextView
            android:id="@+id/tv_man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_man"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/man"
            android:textColor="@color/text_color_2"
            android:textSize="20dp" />
    </RelativeLayout>

</LinearLayout>